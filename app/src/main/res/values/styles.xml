<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TaskTwo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTaskTwo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTaskTwo</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SignUpButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_sing_up</item>
    </style>

    <style name="ImageView">
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextViewHaveAlreadyAccount">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/have_already_account</item>
        <item name="android:text">@string/have_already_account</item>
    </style>

    <style name="EditText">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:thumbTextPadding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
