<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.kulynych.slava.activitys.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:padding="@dimen/icon_margin"
        android:id="@+id/image_username"
        android:src="@drawable/ic_image_timer_auto"
        />

    <EditText
        android:id="@+id/edit_text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_username"
        android:layout_marginLeft="@dimen/edit_text"
        android:layout_alignTop="@+id/image_username"
        android:hint="@string/username"
        android:theme="@style/EditText"
        android:textColor="@color/gray"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_margin"
        android:id="@+id/image_email"
        android:layout_below="@+id/image_username"
        android:src="@drawable/ic_content_mail"
        />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/image_username"
        android:layout_below="@+id/edit_text_user"
        android:layout_marginLeft="@dimen/edit_text"
        android:theme="@style/EditText"
        android:hint="@string/email"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_margin"
        android:id="@+id/image_password"
        android:layout_below="@+id/image_email"
        android:src="@drawable/ic_action_lock"
        />

    <EditText
        android:id="@+id/edit_text_pass"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/image_username"
        android:layout_below="@+id/edit_text_email"
        android:layout_marginLeft="@dimen/edit_text"
        android:theme="@style/EditText"
        android:hint="@string/pass"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_margin"
        android:id="@+id/image_profile_name"
        android:layout_below="@+id/image_password"
        android:src="@drawable/ic_action_account_box"
        />

    <EditText
        android:id="@+id/edit_text_profile"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/image_profile_name"
        android:layout_below="@+id/edit_text_pass"
        android:layout_marginLeft="@dimen/edit_text"
        android:theme="@style/EditText"
        android:hint="@string/profile"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/button_sing_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:layout_below="@+id/image_profile_name"
        android:background="@drawable/oval"
        android:textColor="@color/white"
        android:textSize="@dimen/sing_up"
        android:text="@string/sing_up"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/have_account"
        android:text="@string/have_account"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/account"/>
</RelativeLayout>
